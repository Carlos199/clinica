<div class="container-fluid">
  <div class="panel panel-default">
  <div class="panel-heading">Departamentos</div>
  <div class="panel-body">
<table class="table">
 <thead>
  
  <tr>
   <th></th>
   <th>Codigo</th>
   <th>Nombre</th>
    <th>Departamento</th>
     <th>Region</th>
   <th>Fecha de Alta</th>
   <th>Fecha de Modificación</th>
   <th colspan="2"></th>
  </tr>
 
 </thead>

 <tbody>
  <div id="Ciudades">
   <% @ciudades.each do |ciudade| %>
    <tr>
    <td>
          <%= button_to ciudade_path(ciudade), {method: :get, class: "btn btn-info"} do %>
            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"> </span> Ver
          <% end %>
        </td>
     <td><%= ciudade.codigo %></td>
     <td><%= ciudade.nombre %></td>
      <td><%= ciudade.departamento.nombre %></td>
       <td><%= ciudade.departamento.regione.nombre %></td>
     <td><%= ciudade.created_at.strftime("%d/%m/%Y") %></td>
     <td><%= ciudade.updated_at.strftime("%d/%m/%Y") %></td>
     <td> <%= link_to edit_ciudade_path(ciudade), remote: true, class: "btn btn-info" do %>
       <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> Editar
      <% end %> </td>
     
    
     <td>
      <%= button_to ciudade, { method: :delete, data: { confirm: '¿Está seguro?' }, class: "btn btn-danger" } do %>
       <span class="glyphicon glyphicon-trash" aria-hidden="true"> </span> Eliminar
      <% end %>
     </td>
    </tr>
   <% end %>
  </div>
 </tbody>
 
</table>
 <tr>
   <%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>
  </tr>