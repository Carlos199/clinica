<div id="departamento-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
       <button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"><%= title %></h4>
      </div>
<%= form_for @ciudade, remote: true do |form| %>
  <% if @ciudade.errors.any? %>
<% end %>
 <div class="modal-body">
  <div class="form-group row">
  <div class="col-xs-3">
    <%= form.label :codigo %>
     </div>
 <div class="col-xs-4">
    <%= form.text_field :codigo, autofocus: true, placeholder: "", class: "form-control" %>

  
    </div>
  </div>

 
  <div class="form-group row">
  <div class="col-xs-3">
    <%= form.label :nombre %>
     </div>
 <div class="col-xs-5">
    <%= form.text_field :nombre, autofocus: true, placeholder: "", class: "form-control" %>
 
 </div>
  </div>
   <div class="form-group row">
  <div class="col-xs-3">
  <%= form.label :departamento_id %>
  </div>
 <div class="col-xs-4">
     <%= form.collection_select :departamento_id, Departamento.all, :id, :nombre, 
                  {selected: @ciudade.departamento_id, include_blank: 'Seleccione departamento'},
                  {class: "form-control"} %>
     
    </div>
     <%= link_to  new_departamento_path, remote: true , class: "btn btn-primary" do %> 
   <span class="glyphicon glyphicon-plus" aria-hidden="true"> </span> Departamento
    <% end %>
    
  </div>
<div class="form-group row">
  <div class="col-xs-10">
   <div class="col-xs-5">
    </div>
   <%= form.submit "Aceptar", class: "btn btn-success" %>
   <%= link_to 'Cancelar', ciudades_path, class: "btn btn-success" %>
   </div>
    </div>
<% end %>
 </div>
  </div>
</div>
</div>