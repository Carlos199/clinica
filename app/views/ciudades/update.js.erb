  $('table tbody tr#<%= @ciudade.id %>').replaceWith(' <%= j render "row", ciudade: @ciudade %>');
  $('.alert-success').html("La Ciudad ha sido modificado con Ã©xito").show();
  $('#ciudade-modal').modal('hide');
