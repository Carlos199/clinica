$("ul.errors").html("");
<% if @ciudades.last.errors.any? %>
	<% @ciudades.last.errors.full_messages.each do |message| %>
		$("ul.errors").append($("<li />").html(" <%= message.html_safe %> "));
	<% end %>
<% else %>
	$("#ciudades").html("<%= escape_javascript(render(partial: 'ciudades/table', locals: { ciudade: @ciudade, show_actions: true })) %>");
	$("#new-detail-modal").modal("hide");
<% end %>