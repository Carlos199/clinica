<div class="container-fluid">
  <div class="panel panel-default">
  <div class="panel-heading">Pacientes</div>
  <div class="panel-body">


<table class="table">
 <thead>
  
  <tr>
   <th></th>
   <th>Cedula</th>
   <th>Nombre</th>
    <th>Apellido</th>
     <th>Ciudad</th>
   <th>Direccion</th>
   <th>Telefono</th>
    <th>Celular</th>
     <th>Fecha Naci</th>
   <th>Correo</th>
   <th>Cantacto Fliar</th>
    <th>Fecha Alta</th>
     <th>Fecha Modificacion</th>
   <th colspan="2"></th>
  </tr>
 
 </thead>

 <tbody>
  <div id="Pacientes">
   <% @pacientes.each do |paciente| %>
    <tr>
    <td>
          <%= button_to paciente_path(paciente), {method: :get, class: "btn btn-info"} do %>
            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"> </span> Ver
          <% end %>
        </td>
     <td><%= paciente.ci %></td>
     <td><%= paciente.nombre %></td>
      <td><%= paciente.apellido %></td>
       <td><%= paciente.ciudade.nombre %></td>
        <td><%= paciente.direccion %></td>
     <td><%= paciente.telefono %></td>
      <td><%= paciente.celular %></td>
       <td><%= paciente.fecha %></td>
        <td><%= paciente.correo %></td>
         <td><%= paciente.contacto_familiar %></td>
     <td><%= paciente.created_at.strftime("%d/%m/%Y") %></td>
     <td><%= paciente.updated_at.strftime("%d/%m/%Y") %></td>
     <td> <%= link_to edit_paciente_path(paciente), remote: true, class: "btn btn-info" do %>
       <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> Editar
      <% end %> </td>
     
    
     <td>
      <%= button_to paciente, { method: :delete, data: { confirm: '¿Está seguro?' }, class: "btn btn-danger" } do %>
       <span class="glyphicon glyphicon-trash" aria-hidden="true"> </span> Eliminar
      <% end %>
     </td>
    </tr>
   <% end %>
  </div>
 </tbody>
 
</table>
 <tr>
   <%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>
  </tr>