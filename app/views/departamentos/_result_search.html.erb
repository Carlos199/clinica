<p id="notice"><%= notice %></p>
 <div class="container-fluid">
  <div class="panel panel-default">
  <div class="panel-heading">Departamentos</div>
  <div class="panel-body">
<table class="table">
 <thead>
  
  <tr>
   <th></th>
   <th>Codigo</th>
   <th>Nombre</th>
   <th>Fecha de Alta</th>
   <th>Fecha de Modificación</th>
   <th colspan="2"></th>
  </tr>
 
 </thead>

 <tbody>
  <div id="departamentos">
   <% @departamentos.each do |departamento| %>
    <tr>
    <td>
          <%= button_to departamento_path(departamento), {method: :get, class: "btn btn-info"} do %>
            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"> </span> Ver
          <% end %>
        </td>
    <td><%= departamento.codigo %></td>
     <td><%= departamento.nombre %></td>
     <td><%= departamento.created_at.strftime("%d/%m/%Y") %></td>
     <td><%= departamento.updated_at.strftime("%d/%m/%Y") %></td>
    
      <td> <%= link_to edit_departamento_path(departamento), remote: true, class: "btn btn-info" do %>
       <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> Editar
      <% end %> </td>
     
    
     <td>
      <%= button_to departamento, { method: :delete, data: { confirm: '¿Está seguro?' }, class: "btn btn-danger" } do %>
       <span class="glyphicon glyphicon-trash" aria-hidden="true"> </span> Eliminar
      <% end %>
     </td>
    </tr>
   <% end %>
  </div>
 </tbody>
 
</table>
 <tr>
   <%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>
  </tr>