<p id="notice"><%= notice %></p>

<h1 align="center">Dias</h1>
<%= link_to new_dia_path, class: "btn btn-success"  do%>
  <i class="glyphicon glyphicon-plus"></i> Crear
<% end %>
<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Nombre</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @dias.each do |dia| %>
      <tr>
        <td></td>
        <td><%= dia.nombre %></td>
       
        <td><%= link_to edit_dia_path(dia), class: "btn btn-primary" do%>
            <i class="glyphicon glyphicon-edit"></i> Editar
          <% end %>
          <%= link_to dias_path(dia), class: "btn btn-danger", method: :delete,data: { confirm: 'Estas seguro de eliminar?' } do %>
            <i class="glyphicon glyphicon-trash"></i> Cancelar
          <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo', new_dia_path %>
